{
  "id": null,
  "title": "Steam Dashboard Metrics",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Cache Hits (game-stats-service)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "increase(cache_hits_total[5m])",
          "legendFormat": "{{resource}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Gateway HTTP p95 (seconds)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(gateway_http_request_duration_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Current Live Watchers (demo)",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(live_watchers)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Live Events Delivered",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "sum(live_events_delivered_total)",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Steam Upstream Duration (seconds)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(steam_upstream_duration_seconds_sum[5m])) by (endpoint) / sum(rate(steam_upstream_duration_seconds_count[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    }
  ]
}
